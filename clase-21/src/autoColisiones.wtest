import autos.*
import wollok.game.*

describe "colisiones del auto" {
	test "si el auto colisiona con otros autos, se pierde una vida" {
		auto.chocarCon(new AutoAEsquivar(position=new Position(x=0, y=0)))

		assert.equals(2, auto.vidas())
	}
	
	test "si el auto colisiona con una seccion de la calle, no pasa nada" {
		auto.chocarCon(new SeccionDeCalle())
		
		assert.equals(3, auto.vidas())
	}
}
